<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team.java.brokenrecipes.MainActivity"
    android:id="@+id/recipesLayout">
    <!---->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonVideo"
        android:background="@android:color/transparent" />

    <Button
        android:text="Browse"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/btnBrowse"
        android:onClick="onClickBtnBrowse"
        android:background="@drawable/food"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textAllCaps="false"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
        <!--commented it out because it was giving me errors. not sure why
        android:textColor="@color/common_google_signin_btn_text_dark_focused"-->

    <Button
        android:text="Create"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/btnCreate"
        android:background="@drawable/food"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textCursorDrawable="@color/colorPrimary"
        android:textIsSelectable="false"
        tools:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickBtnCreate" />
    <!--commented it out because it was giving me errors. not sure why
    android:textColor="@color/common_google_signin_btn_text_dark_focused"-->

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoView"
        android:fadingEdge="horizontal|vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!---android:textSize="30sp"-->

</RelativeLayout>
